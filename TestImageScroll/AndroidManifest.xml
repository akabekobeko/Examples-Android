<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
	android:versionName="1.0" package="me.akabeko.testimagescroll">

	<uses-sdk
	    android:minSdkVersion="9"
	    android:targetSdkVersion="17" />

	<application
	    android:allowBackup="true"
		android:icon="@drawable/icon"
		android:name="me.akabeko.testimagescroll.model.App"
		android:label="@string/app_name">
		<activity
			android:name=".TopActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".SimpleImageScrollActivity"  android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:configChanges="keyboardHidden|orientation"  />
		<activity android:name=".AdvanceImageScrollActivity" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" android:configChanges="keyboardHidden|orientation" />
	</application>
</manifest>